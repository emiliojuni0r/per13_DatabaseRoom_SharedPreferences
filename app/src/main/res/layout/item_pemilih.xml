<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D9D9D9"
    android:paddingHorizontal="10dp"
    android:paddingVertical="15dp"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/number_pemilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/name_pemilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roy Kafabih SIGMA SKIBIDI"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/number_pemilih"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:id="@+id/icon_container"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/delete_pemilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_delete"
            app:layout_constraintStart_toEndOf="@id/name_pemilih"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:id="@+id/edit_pemilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_edit"
            app:layout_constraintStart_toEndOf="@id/delete_pemilih"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/show_pemilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_show"
            app:layout_constraintStart_toEndOf="@id/edit_pemilih"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>